#!/usr/bin/env ruby
$:.unshift File.dirname(__FILE__) + "/../lib"
require "ws-io"
require 'irb'
require 'optparse'

port = 8080
opt = OptionParser.new
opt.on('-p PORT') {|v| port = v }
opt.parse!(ARGV)

WsIo.start(port) {
  IRB.start
}.after {
  WsIo.ws.send(
%q[                     _      _     
                    (_)    | |    
__      _____ ______ _ _ __| |__  
\ \ /\ / / __|______| | '__| '_ \ 
 \ V  V /\__ \      | | |  | |_) |
  \_/\_/ |___/      |_|_|  |_.__/ 
                                  ]
  )
}.open.join
