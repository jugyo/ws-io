#!/usr/bin/env ruby
$:.unshift File.dirname(__FILE__) + "/../lib"
require "ws-io"
require 'irb'

WsIo.start {
  IRB.start
}.after {
  WsIo.ws.send(
%q[                     _      _     
                    (_)    | |    
__      _____ ______ _ _ __| |__  
\ \ /\ / / __|______| | '__| '_ \ 
 \ V  V /\__ \      | | |  | |_) |
  \_/\_/ |___/      |_|_|  |_.__/ 
                                  ]
  )
}.open.join
